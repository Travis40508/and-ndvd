<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#95ffffff"
        card_view:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/member_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/member_firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/member_photo"
                android:textSize="30sp"
                tools:text="First Name"/>

            <TextView
                android:id="@+id/member_lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_firstName"
                android:layout_toEndOf="@+id/member_photo"
                android:textSize="25sp"
                tools:text="Last Name"/>

            <TextView
                android:id="@+id/member_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_lastName"
                android:layout_toEndOf="@+id/member_photo"
                android:layout_marginEnd="10dp"
                android:autoLink="phone"
                tools:text="9876543210"/>
            <TextView
                android:id="@+id/member_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/member_phone"
                android:layout_below="@+id/member_lastName"
                android:autoLink="phone"
                tools:text="9876543210"/>
            <TextView
                android:id="@+id/member_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_mobile"
                android:layout_toEndOf="@+id/member_photo"
                android:autoLink="email"
                tools:text="test@test.com"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>