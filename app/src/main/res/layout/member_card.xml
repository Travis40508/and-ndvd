<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="@dimen/cardviewCornerRadius"
        card_view:cardElevation="@dimen/cardElevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/member_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/member_default" />

            <TextView
                android:id="@+id/member_firstName"
                style="@style/BodyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/member_photo"
                android:textSize="@dimen/fnameTextSize"
                tools:text="First Name" />

            <TextView
                android:id="@+id/member_lastName"
                style="@style/BodyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_firstName"
                android:layout_toEndOf="@+id/member_photo"
                android:textSize="@dimen/lnameTextsize"
                tools:text="Last Name" />

            <TextView
                android:id="@+id/member_phone"
                style="@style/BodyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_lastName"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/member_photo"
                android:autoLink="phone"
                tools:text="9876543210" />

            <TextView
                android:id="@+id/member_mobile"
                style="@style/BodyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_lastName"
                android:layout_toEndOf="@+id/member_phone"
                android:autoLink="phone"
                tools:text="9876543210" />

            <TextView
                android:id="@+id/member_email"
                style="@style/BodyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_mobile"
                android:layout_toEndOf="@+id/member_photo"
                android:autoLink="email"
                tools:text="test@test.com" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>