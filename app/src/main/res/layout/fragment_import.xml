<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintVertical_chainStyle="spread_inside"
    android:background="@android:color/white">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_first_name_parent"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_last_name_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:hint="First Name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_last_name_parent"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@id/input_first_name_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_email_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Last Name"
        android:layout_margin="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_email_parent"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/input_mobile_phone_parent"
        app:layout_constraintTop_toBottomOf="@id/input_last_name_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Email Address"
        android:layout_margin="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_mobile_phone_parent"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/input_home_phone_parent"
        app:layout_constraintTop_toBottomOf="@id/input_email_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Mobile Phone"
        android:layout_margin="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_mobile_phone"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@id/input_mobile_phone_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/input_home_phone_parent"
        app:layout_constraintBottom_toTopOf="@+id/button_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Home Phone"
        android:layout_margin="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_home_phone"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

<android.support.constraint.ConstraintLayout
    android:id="@+id/button_layout_parent"
    app:layout_constraintVertical_weight="1"
    android:layout_margin="10dp"
    app:layout_constraintTop_toBottomOf="@id/input_home_phone_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <Button
        android:id="@+id/button_take_picture"
        android:background="@android:color/transparent"
        android:text="Take Picture"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/button_save_form"
        android:background="@android:color/transparent"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/image_taken"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>